#!/usr/bin/make -f

%:
	dh $@

override_dh_auto_clean:
	dh_auto_clean

override_dh_prepare:
	dh_prepare

override_dh_install:
	./prepare.sh
	rm -r data/etc/apt
	mkdir -p debian/flexibee-client
	mv -f data/*	debian/flexibee-client
	cp -f client/flexibee	debian/flexibee-client/usr/bin
	dh_install
	convert -font helvetica -pointsize 30 -draw "text 300,420 '`cat debian/flexibee-client/usr/share/flexibee/lib/VERSION.txt`'" debian/flexibee-client/usr/share/icons/hicolor/512x512/flexibee.png debian/flexibee-client/usr/share/flexibee/flexibee-splash.png

override_dh_strip_nondeterminism:
	echo dh_strip_nondeterminism skipped

#override_dh_clean:
#	debconf-updatepo
#	dh_clean
